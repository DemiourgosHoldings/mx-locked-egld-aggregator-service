{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/api/src",
  "compilerOptions": {
    "webpack": false,
    "plugins": [
      "@nestjs/swagger"
    ],
    "tsConfigPath": "apps/api/tsconfig.app.json",
    "assets": [
      {
        "include": "../config/config.yaml",
        "outDir": "./dist/config"
      },
      {
        "include": "../config/public-config.devnet.yaml",
        "outDir": "./dist/config"
      },
      {
        "include": "../config/public-config.testnet.yaml",
        "outDir": "./dist/config"
      },
      {
        "include": "../config/public-config.mainnet.yaml",
        "outDir": "./dist/config"
      }
    ]
  },
  "monorepo": true,
  "root": "apps/api",
  "projects": {
    "aggregator": {
        "type": "application",
        "root": "apps/aggregator",
        "entryFile": "main",
        "sourceRoot": "apps/aggregator/src",
        "compilerOptions": {
            "tsConfigPath": "apps/aggregator/tsconfig.app.json"
        }
    },
    "api": {
      "type": "application",
      "root": "apps/api",
      "entryFile": "main",
      "sourceRoot": "apps/api/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api/tsconfig.app.json"
      }
    },
    "ingester": {
      "type": "application",
      "root": "apps/ingester",
      "entryFile": "main",
      "sourceRoot": "apps/ingester/src",
      "compilerOptions": {
        "tsConfigPath": "apps/ingester/tsconfig.app.json"
      }
    },
    "indexer": {
      "type": "application",
      "root": "apps/indexer",
      "entryFile": "main",
      "sourceRoot": "apps/indexer/src",
      "compilerOptions": {
        "tsConfigPath": "apps/indexer/tsconfig.app.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "core": {
      "type": "library",
      "root": "libs/core",
      "entryFile": "index",
      "sourceRoot": "libs/core/src",
      "compilerOptions": {
        "tsConfigPath": "libs/core/tsconfig.lib.json"
      }
    },
    "timescaledb": {
      "type": "library",
      "root": "libs/timescaledb",
      "entryFile": "index",
      "sourceRoot": "libs/timescaledb/src",
      "compilerOptions": {
        "tsConfigPath": "libs/timescaledb/tsconfig.lib.json"
      }
    }
  }
}
